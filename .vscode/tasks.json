{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tauri: build-debug",
            "type": "shell",
            "command": "cargo",
            "args": ["build"],
            "options": {
                "cwd": "${workspaceFolder}/src-tauri"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$rustc"
        },
        {
            "label": "tauri: dev",
            "type": "shell",
            "command": "npm",
            "args": ["run", "tauri", "dev"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "tauri",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Compiling.*$",
                    "endsPattern": "^.*Finished.*$"
                }
            }
        },
        {
            "label": "cargo: check",
            "type": "shell",
            "command": "cargo",
            "args": ["check"],
            "options": {
                "cwd": "${workspaceFolder}/src-tauri"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$rustc"
        }
    ]
}